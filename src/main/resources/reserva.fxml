<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="10" alignment="TOP_CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="br.com.nayan.reserva_salao.view.ReservaViewController">

    <padding> <Insets top="20" right="20" bottom="20" left="20"/> </padding>

    <Label text="Gerenciamento de Reservas">
        <font><Font name="System Bold" size="20.0"/></font>
    </Label>

    <TitledPane text="Filtros de Pesquisa" expanded="true">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <TextField fx:id="filtroCondominio" promptText="Filtrar por Condomínio"/>
            <TextField fx:id="filtroSalao" promptText="Filtrar por Salão"/>
            <DatePicker fx:id="filtroData" promptText="Filtrar por Data"/>
            <Button text="Limpar" onAction="#limparFiltros"/>
        </HBox>
    </TitledPane>

    <Separator/>

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="Condomínio:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtNomeCondominio" promptText="Nome exato" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Salão:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <TextField fx:id="txtNomeSalao" promptText="Nome exato" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

        <Label text="Casa (Nº):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtNumeroCasa" promptText="101" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Data:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <DatePicker fx:id="dpDataReserva" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Salvar / Atualizar" onAction="#onSalvar" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
        <Button text="Limpar Campos" onAction="#limparCampos"/>
    </HBox>

    <Separator/>

    <TableView fx:id="tabelaReservas" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colCondominio" text="Condomínio" prefWidth="150"/>
            <TableColumn fx:id="colSalao" text="Salão" prefWidth="150"/>
            <TableColumn fx:id="colCasa" text="Casa" prefWidth="80"/>
            <TableColumn fx:id="colData" text="Data" prefWidth="100"/>
        </columns>
        <columnResizePolicy> <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/> </columnResizePolicy>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Editar Selecionado" onAction="#onEditar" style="-fx-background-color: #f39c12; -fx-text-fill: white;"/>
        <Button text="Excluir Selecionado" onAction="#onExcluir" style="-fx-background-color: #c0392b; -fx-text-fill: white;"/>
    </HBox>

</VBox>